# Configuration file for mongos 
# Attention: this file is generated by Puppet and may overwritten by next run

#where to log
logpath=<%= logpath %>/<%= logfile %>
logappend=<%= @logappend %>

# fork and run in background
fork = <%= mongofork %>
port = <%= port %>

<% if @bind_ip %>
#bind ip - defaults in mongodb to all interfaces
bind_ip = <%= bind_ip %> 
<% end %>
<% if @verbose %>
# Verbose logging output.
verbose = <%= verbose %>
<% end %>
<% if @objcheck %>
# Inspect all client data for validity on receipt (useful for
# developing drivers)
objcheck = <%= objcheck %>
<% end %>
<% if @nohttpinterface %>
# Disable the HTTP interface (Defaults to localhost:27018).
nohttpinterface = <%= @nohttpinterface %>
<% end %>
<% if @noscripting %>
# Turns off server-side scripting.  This will result in greatly limited
# functionality
noscripting = <%= noscripting %>
<% end %>
<% if @chunkSize %>chunkSize = <%= @chunkSize %><% end %>
<% if @configdb %>configdb = <%= @configdb %><% end %>


