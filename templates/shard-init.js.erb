// JavaScript file to set up MongoDB sharding
// the shard can be individual nodes but should 
// be replica sets in a production environment

<% @shardmembers.each do |shardmember| %>
    sh.addShard("<% if shardmember.has_key?('replset')%><%=shardmember['replset']%>/<% end %><%=shardmember['host']%>:<%=shardmember['port']%>");
<% end %>    